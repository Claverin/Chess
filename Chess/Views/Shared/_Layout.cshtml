<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chess</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chess.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="@ViewBag.BodyClass">

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Chess</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- HOME (GET) -->
                        <li class="nav-item">
                            <form asp-controller="Home" asp-action="Index" method="get" class="d-inline m-0 p-0">
                                <button type="submit" class="nav-link text-light bg-transparent border-0">
                                    Home
                                </button>
                            </form>
                        </li>

                        <!-- NEW GAME (POST) -->
                        <li class="nav-item">
                            <form asp-controller="Game" asp-action="CreateNewGame" method="post" class="d-inline m-0 p-0">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="numberOfPlayers" value="2" />
                                <button type="submit" class="nav-link text-light bg-transparent border-0">
                                    New Game
                                </button>
                            </form>
                        </li>

                        <!-- CONTINUE (GET) -->
                        <li class="nav-item">
                            <form asp-controller="Game" asp-action="InitializeGame" method="post" class="d-inline m-0 p-0">
                                <button type="submit" class="nav-link text-light bg-transparent border-0">
                                    Continue
                                </button>
                            </form>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Chess -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>